<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.layne.squirrel.presentation.main.directories.DirectoriesFragment"
        android:label="DirectoryFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/openDirectory"
            app:destination="@id/directoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/directoryFragment"
        android:name="com.layne.squirrel.presentation.main.accounts.AccountsFragment"
        android:label="KeyListFragment"
        tools:layout="@layout/fragment_directory">
        <action
            android:id="@+id/openAccount"
            app:destination="@id/accountFragment" />
        <argument
            android:name="directoryPosition"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.layne.squirrel.presentation.main.keys.KeysFragment"
        android:label="KeyFragment"
        tools:layout="@layout/fragment_account">
        <argument
            android:name="directoryPosition"
            app:argType="integer"
            android:defaultValue="-1" />
        <argument
            android:name="accountPosition"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>
</navigation>